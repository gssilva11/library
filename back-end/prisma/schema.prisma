// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  code          String         @id @default(uuid())
  title         String
  author        String
  year          DateTime
  belongs_to    String
  publisher     Publisher      @relation(fields: [publisher_id], references: [id_p])
  publisher_id  String   
  status        BookStatus
  Operations    Operation[]

  @@map("books")
  
}

enum BookStatus {
  AVAILABLE
  RESERVED
  BORROWED
}

model Publisher {
  id_p     String      @id @default(uuid())
  name_p   String
  city_p   String
  state_p  String
  books    Book[]
}

model Operation {
  // id           String         @default(uuid())
  createdAt    DateTime       @default(now())
  expectedDate DateTime
  finalDate    DateTime?
  type         OperationType
  book         Book           @relation(fields: [bookCode], references: [code])
  bookCode     String         
  student      User           @relation(fields: [studentCPF], references: [cpf])
  studentCPF   String

  @@id([bookCode, studentCPF, createdAt, type])
}

enum OperationType {
  RESERVE
  BORROW
}

model User {
  cpf          String      @id
  email        String      @unique
  password     String
  name         String
  code         String      @unique
  phone        String
  birth_date   DateTime
  street_name  String
  street_type  StreetType
  house_number String
  complements  String?
  neighborhood String
  city         String 
  state        String
  cep          Int
  institution  String
  role         Role        @default(STUDENT)
  Operations      Operation[]

  @@map("users")
}

enum Role {
  STUDENT
  EMPLOYEE
  ADMIN
}

enum StreetType {
